# .env Example for Business Lookup Assistant

# Required for OpenAI usage
OPENAI_API_KEY=your-openai-api-key

# API key for authenticating requests (change this to a secure value)
API_KEY=your-api-key

# Optional: Azure OpenAI support (only needed if using Azure)
AZURE_OPENAI_ENDPOINT=https://your-azure-endpoint.openai.azure.com/
AZURE_OPENAI_KEY=your-azure-api-key
AZURE_OPENAI_DEPLOYMENT=gpt-4.1-nano
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-ada-002

# Optional: Custom data/model paths
DATA_PATH=data/business.json
EMBEDDING_MODEL=text-embedding-ada-002
COMPLETIONS_MODEL=gpt-4.1-nano
